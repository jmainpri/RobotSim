CC = g++

uname_O := $(shell sh -c 'uname -o 2>/dev/null || echo not')
uname := $(shell sh -c 'uname -o 2>/dev/null || echo not')

BUILDNAME=unknownOS
#BUILDNAME=MacOSX

ifneq ($(OSTYPE),)
  BUILDNAME=$(OSTYPE)
endif
ifneq ($(OS),)
  BUILDNAME=$(OS)
endif
CYGWIN = 0
ifeq ($(uname_O),Cygwin)
	CYGWIN = 1
endif
ifeq ($(uname),Linux)
	BUILDNAME=linux
endif
ifeq ($(BUILDNAME),MacOSX)
	MAC_OS_X = 1
endif

## Default Settings
TINYXML = Library/tinyxml
#GLUT = Library/glut-3.7
GLUI = Library/glui-2.35/src
#PQP = Library/PQP_v1.3
#LPSOLVE = Library/lp_solve_5.5
#GLPK = Library/glpk-4.8
#OPT++ = Library/OPT++2.1
ROBO = Library/KrisLibrary/Robotics
#CLAPACK = Library/CLAPACK
ODE = Library/ode
KRISLIB = Library/KrisLibrary
FREEGLUT = 0

